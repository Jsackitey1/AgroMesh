{
  "cli": {
    "version": ">= 5.9.1"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "EXPO_PUBLIC_API_BASE_URL": "http://localhost:5001/api",
        "EXPO_PUBLIC_SOCKET_URL": "http://localhost:5001"
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "env": {
        "EXPO_PUBLIC_API_BASE_URL": "https://your-staging-api.com/api",
        "EXPO_PUBLIC_SOCKET_URL": "https://your-staging-api.com"
      }
    },
    "production": {
      "android": {
        "buildType": "app-bundle"
      },
      "ios": {
        "distribution": "store"
      },
      "env": {
        "EXPO_PUBLIC_API_BASE_URL": "https://your-production-api.com/api",
        "EXPO_PUBLIC_SOCKET_URL": "https://your-production-api.com"
      }
    }
  },
  "submit": {
    "production": {}
  }
} 