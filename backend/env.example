# Server Configuration
PORT=5001
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/agromesh

# Security Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:19006,http://localhost:19000,exp://localhost:19000,exp://192.168.1.92:19000

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000,http://localhost:19006

# API Configuration
API_BASE_URL=http://localhost:5001
SWAGGER_SERVER_URL=http://localhost:5001

# External Services (optional; leave empty to disable AI features locally)
GEMINI_API_KEY=

# Logging Configuration
LOG_LEVEL=info

# Optional: Email Configuration (uncomment to enable)
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# Optional: SMS Configuration (uncomment to enable)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Optional: Firebase Configuration (uncomment to enable)
# FIREBASE_PROJECT_ID=your-firebase-project-id
# FIREBASE_PRIVATE_KEY=your-firebase-private-key
# FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Optional: Redis Configuration (uncomment to enable)
# REDIS_URL=redis://localhost:6379

# Optional: AWS Configuration (uncomment to enable)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-west-2
# AWS_S3_BUCKET=your-s3-bucket-name

# Optional: LiveKit Configuration (uncomment to enable)
# LIVEKIT_API_KEY=your-livekit-api-key
# LIVEKIT_API_SECRET=your-livekit-api-secret
# LIVEKIT_URL=wss://your-livekit-url 