# AgroMesh Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5001
NODE_ENV=development

# Database Configuration (Required)
# Get your MongoDB Atlas connection string from: https://www.mongodb.com/atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/agromesh?retryWrites=true&w=majority

# Authentication Configuration (Required)
# Generate a secure random string for JWT_SECRET
JWT_SECRET=your_super_secure_jwt_secret_key_here_make_it_long_and_random
JWT_EXPIRES_IN=7d

# AI Services Configuration (Required)
# Get your Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# CORS Configuration (for development)
# Add your frontend URLs here
CORS_ORIGIN=http://localhost:3000,http://localhost:19006,http://localhost:8081

# Optional: File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Optional: Logging Configuration
LOG_LEVEL=info

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: AWS Configuration (for deployment)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-west-2

# Optional: Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Optional: Push Notifications
# FIREBASE_SERVER_KEY=your_firebase_server_key

# Optional: LiveKit Configuration (for video calls)
# LIVEKIT_URL=wss://your-livekit-server.com
# LIVEKIT_API_KEY=your_livekit_api_key
# LIVEKIT_API_SECRET=your_livekit_api_secret 